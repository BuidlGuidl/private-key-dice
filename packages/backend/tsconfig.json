{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "~~/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "types/**/*.ts"],
  "exclude": ["node_modules"]
}
